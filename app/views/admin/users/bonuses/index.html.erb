<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: 80px;">
        <div class="d-flex align-items-center">
          <h4 class="text-primary me-3"><%= @user.name.present? ? @user.name : @user.email %>のボーナス詳細</h4>
          <%= form_with url: admin_user_bonuses_path(@user), method: :get, local: true, class: "d-flex align-items-center", id: "month-form" do |f| %>
            <label class="form-label me-2 mb-0">対象月:</label>
            <%= f.month_field :month, value: @selected_month, class: "form-control", style: "width: 180px;", onchange: "document.getElementById('month-form').submit();" %>
          <% end %>
        </div>
        <div>
          <%= link_to "ボーナス一覧に戻る", admin_bonuses_path(month: @selected_month), class: "btn btn-outline-secondary me-2" %>
          <%= link_to "ダッシュボード", admin_root_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>

  <!-- 統計情報 -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card bg-info text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">総売上</h6>
              <h4 class="mb-0">¥<%= number_with_delimiter(@total_sales_amount) %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-chart-line fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-success text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">総ボーナス</h6>
              <h4 class="mb-0">¥<%= number_with_delimiter(@total_bonus) %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-yen-sign fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-warning text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">直接紹介数</h6>
              <h4 class="mb-0"><%= @referrals.count %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-users fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">購入件数</h6>
              <h4 class="mb-0"><%= @purchases_with_descendants.count %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-shopping-cart fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 販売履歴テーブル -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">販売履歴とボーナス詳細 (<%= Date.strptime(@selected_month, "%Y-%m").strftime("%Y年%m月") %>)</h5>
        </div>
        <div class="card-body">
          <% if @purchases_with_descendants.any? %>
            <div class="table-responsive">
              <table class="table table-bordered table-hover align-middle text-nowrap">
                <thead class="table-light">
                  <tr>
                    <th class="text-nowrap">販売店</th>
                    <th class="text-nowrap">購入者名</th>
                    <th class="text-nowrap">商品名</th>
                    <th class="text-end text-nowrap">単価（円）</th>
                    <th class="text-end text-nowrap">数量</th>
                    <th class="text-end text-nowrap">合計（円）</th>
                    <th class="text-end text-nowrap">ボーナス（円）</th>
                    <th class="text-nowrap">メール</th>
                    <th class="text-nowrap">電話番号</th>
                    <th class="text-nowrap">住所</th>
                    <th class="text-nowrap">購入日時</th>
                  </tr>
                </thead>
                <tbody>
                  <% total_sum = 0 %>
                  <% total_bonus_sum = 0 %>

                  <% @purchases_with_descendants.includes(:user, :customer, :product).each do |purchase| %>
                    <% total = purchase.product.base_price * purchase.quantity %>
                    <% bonus = @user.bonus_for_purchase(purchase) %>
                    <% total_sum += total %>
                    <% total_bonus_sum += bonus %>
                    <tr>
                      <td class="fw-bold text-nowrap">
                        <%= purchase.user.name.present? ? purchase.user.name : purchase.user.email %>
                      </td>
                      <td class="text-nowrap"><%= purchase.customer&.name || "-" %></td>
                      <td class="text-nowrap"><%= purchase.product.name %></td>
                      <td class="text-end text-nowrap"><%= number_with_delimiter(purchase.product.base_price) %></td>
                      <td class="text-end text-nowrap"><%= purchase.quantity %></td>
                      <td class="text-end text-primary fw-bold text-nowrap"><%= number_with_delimiter(total) %></td>
                      <td class="text-end text-success fw-bold text-nowrap"><%= number_with_delimiter(bonus) %></td>
                      <td class="text-nowrap"><%= purchase.customer&.email || "-" %></td>
                      <td class="text-nowrap"><%= purchase.customer&.phone || "-" %></td>
                      <td class="text-nowrap"><%= purchase.customer&.address || "-" %></td>
                      <td class="text-nowrap"><%= purchase.purchased_at&.strftime("%Y/%m/%d %H:%M") %></td>
                    </tr>
                  <% end %>

                  <!-- 合計行 -->
                  <tr class="table-primary fw-bold">
                    <td colspan="5" class="text-end text-nowrap">合計</td>
                    <td class="text-end text-primary text-nowrap"><%= number_with_delimiter(total_sum) %></td>
                    <td class="text-end text-success text-nowrap"><%= number_with_delimiter(total_bonus_sum) %></td>
                    <td colspan="4"></td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">販売履歴がありません</h5>
              <p class="text-muted">選択した月（<%= Date.strptime(@selected_month, "%Y-%m").strftime("%Y年%m月") %>）には販売履歴がありません。</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>