<!-- app/views/admin/inquiries/index.html.erb -->
<section id="inquiries">
  <h2>お問い合わせ一覧</h2>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>メール</th>
        <th>送信日時</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @inquiries.each do |inquiry| %>
        <tr>
          <td><%= inquiry.name %></td>
          <td><%= inquiry.email %></td>
          <td><%= inquiry.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= link_to "詳細", admin_inquiry_path(inquiry), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
