<div class="container mt-5">
  <h2>新規回答を追加</h2>

  <%= form_with(model: [@inquiry, @answer], url: admin_inquiry_answers_path(@inquiry), local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :content, "回答内容" %>
      <%= f.text_area :content, class: "form-control", rows: 6 %>
    </div>

    <%= f.submit "送信", class: "btn btn-primary" %>
  <% end %>
</div>
