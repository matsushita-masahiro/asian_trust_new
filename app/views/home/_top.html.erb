<div id="custom-slider" class="slider">
  <% slides = [
    { image: 'top1.jpg', title: 'Web制作ポートフォリオ', desc: 'Stripe / PayPal サブスクリプション対応' },
    { image: 'top2.jpg', title: 'モバイル対応', desc: 'ユーザーフレンドリーなUI設計' },
    { image: 'top3.jpg', title: '管理画面ダッシュボード', desc: '顧客支払管理機能' }
  ] %>

  <% slides.each_with_index do |slide, i| %>
    <div class="slide <%= 'active' if i == 0 %>">
      <img src="<%= asset_path(slide[:image]) %>" class="slider-image" alt="スライド画像">
      <div class="caption">
        <h3><%= slide[:title] %></h3>
        <p><%= slide[:desc] %></p>
      </div>
    </div>
  <% end %>
</div>

<div id="slider-dots" class="text-center">
  <% slides.each_with_index do |_, i| %>
    <span class="dot <%= 'active' if i == 0 %>" data-index="<%= i %>"></span>
  <% end %>
</div>

