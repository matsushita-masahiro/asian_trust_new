<div class="container pt-5 mt-5 px-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>🧾 商品一覧</h2>
    <%= link_to "ダッシュボード", admin_root_path, class: "btn btn-outline-primary" %>
  </div>

  <ul class="list-group">
    <% @products.each do |product| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= product.name %></strong><br>

          <% if product.unit_quantity.present? && product.unit_label.present? %>
            <% display_quantity = (product.unit_quantity.to_f == product.unit_quantity.to_i) ? product.unit_quantity.to_i : product.unit_quantity %>
            販売単位：<%= "#{display_quantity}#{product.unit_label}" %><br>
          <% end %>


          基本金額：¥<%= product.base_price %><br>
          <span class="badge bg-<%= product.is_active ? 'success' : 'secondary' %>">
            <%= product.is_active ? '有効' : '無効' %>
          </span>
        </div>
        <%= link_to '編集', edit_admin_product_path(product), class: 'btn btn-sm btn-outline-primary' %>
      </li>
    <% end %>
  </ul>
</div>
