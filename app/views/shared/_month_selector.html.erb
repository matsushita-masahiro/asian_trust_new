<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <% if defined?(@user) && @user.present? %>
      <% if @user.level.value == 6 %>
        <%= link_to "購入履歴", purchases_user_path(@user, month: @selected_month), 
            class: "btn btn-outline-info btn-sm" %>
      <% else %>
        <%= link_to "販売履歴", purchases_user_path(@user, month: @selected_month), 
            class: "btn btn-outline-info btn-sm" %>
      <% end %>
    <% end %>
  </div>
  
  <div>
    <%= form_with url: request.path, method: :get, local: true do %>
      <%= select_tag :month, options_for_select(month_options, @selected_month),
          class: "form-select d-inline-block w-auto", onchange: "this.form.submit();" %>
    
    <%# ✅ user_id を hidden で送信 %>
      <%= hidden_field_tag :user_id, @user.id if defined?(@user) %>
    <% end %>
  </div>
</div>
