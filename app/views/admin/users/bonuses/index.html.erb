<div class="container-fluid" style="padding-top: 100px;">
  <!-- ヘッダーセクション -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border shadow-sm bg-white">
        <div class="card-body p-4">
          <!-- タイトル行 -->
          <div class="row align-items-center mb-3">
            <div class="col-md-8">
              <div class="d-flex align-items-center">
                <i class="fas fa-user-tie fa-2x me-3 text-primary"></i>
                <div>
                  <h3 class="mb-0 fw-bold text-dark"><%= @user.name.present? ? @user.name : @user.email %></h3>
                  <p class="mb-0 text-muted">インセンティブ詳細レポート</p>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-md-end">
              <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end">
                <%= link_to admin_bonuses_path(month: @selected_month), class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="fas fa-arrow-left me-1"></i>一覧に戻る
                <% end %>
                <%= link_to admin_root_path, class: "btn btn-outline-primary btn-sm" do %>
                  <i class="fas fa-tachometer-alt me-1"></i>ダッシュボード
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- 月選択行 -->
          <div class="row">
            <div class="col-12">
              <%= form_with url: admin_user_bonuses_path(@user), method: :get, local: true, class: "d-flex align-items-center", id: "month-form" do |f| %>
                <label class="form-label me-3 mb-0 text-dark">対象月:</label>
                <div class="input-group" style="width: 200px;">
                  <span class="input-group-text bg-white border-0">
                    <i class="fas fa-calendar-alt text-muted"></i>
                  </span>
                  <%= f.month_field :month, value: @selected_month, class: "form-control border-0", onchange: "document.getElementById('month-form').submit();" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 統計情報 -->
  <div class="row mb-5">
    <div class="col-md-3 mb-4">
      <div class="card bg-info text-white shadow-sm">
        <div class="card-body py-4">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">総売上</h6>
              <h4 class="mb-0">¥<%= number_with_delimiter(@total_sales_amount) %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-chart-line fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-4">
      <div class="card bg-success text-white shadow-sm">
        <div class="card-body py-4">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">総インセンティブ</h6>
              <h4 class="mb-0">¥<%= number_with_delimiter(@total_bonus) %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-yen-sign fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-4">
      <div class="card bg-warning text-white shadow-sm">
        <div class="card-body py-4">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">直接紹介数</h6>
              <h4 class="mb-0"><%= @referrals.count %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-users fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-4">
      <div class="card bg-primary text-white shadow-sm">
        <div class="card-body py-4">
          <div class="d-flex justify-content-between">
            <div>
              <h6 class="card-title">購入件数</h6>
              <h4 class="mb-0"><%= @purchases_with_descendants.count %></h4>
            </div>
            <div class="align-self-center">
              <i class="fas fa-shopping-cart fa-2x opacity-75"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 販売履歴テーブル -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">販売履歴とインセンティブ詳細 (<%= Date.strptime(@selected_month, "%Y-%m").strftime("%Y年%m月") %>)</h5>
        </div>
        <div class="card-body">
          <% if @purchases_with_descendants.any? %>
            <div class="table-responsive">
              <table class="table table-bordered table-hover align-middle text-nowrap">
                <thead class="table-light">
                  <tr>
                    <th class="text-nowrap">購入ID</th>
                    <th class="text-nowrap">販売店</th>
                    <th class="text-nowrap">購入者名</th>
                    <th class="text-nowrap">商品名</th>
                    <th class="text-end text-nowrap">基本単価（円）</th>
                    <th class="text-end text-nowrap">インセンティブ単価（円）</th>
                    <th class="text-end text-nowrap">数量</th>
                    <th class="text-end text-nowrap">合計（円）</th>
                    <th class="text-end text-nowrap">インセンティブ（円）</th>
                    <th class="text-nowrap">メール</th>
                    <th class="text-nowrap">電話番号</th>
                    <th class="text-nowrap">住所</th>
                    <th class="text-nowrap">購入日</th>
                  </tr>
                </thead>
                <tbody>
                  <% total_sum = 0 %>
                  <% total_bonus_sum = 0 %>

                  <% @purchases_with_descendants.each do |purchase| %>
                    <% purchase.purchase_items.each_with_index do |item, index| %>
                      <% total = item.unit_price * item.quantity %>
                      <% # 各アイテムごとにインセンティブを計算（統一されたロジックを使用） %>
                      <% if purchase.user == @user %>
                        <% # 自分の販売の場合 %>
                        <% item_bonus = @user.bonus_for_purchase_item(item) %>
                      <% else %>
                        <% # 子孫の販売の場合：モデルのロジックを使用 %>
                        <% purchase_user_level = purchase.user.level_at(purchase.purchased_at) %>
                        <% my_level_at_purchase = @user.level_at(purchase.purchased_at) %>
                        <% purchase_user_price = item.product.product_prices.find_by(level_id: purchase_user_level.id)&.price || 0 %>
                        <% my_price = item.product.product_prices.find_by(level_id: my_level_at_purchase.id)&.price || 0 %>
                        <% if purchase_user_price > my_price %>
                          <% item_bonus = (purchase_user_price - my_price) * item.quantity %>
                        <% else %>
                          <% item_bonus = 0 %>
                        <% end %>
                      <% end %>
                      <% total_sum += total %>
                      <% total_bonus_sum += item_bonus %>
                      <% is_first_item = index == 0 %>
                      <% row_class = purchase.purchase_items.count > 1 ? "bg-info bg-opacity-10" : "" %>
                      <tr class="<%= row_class %>">
                        <!-- 購入ID -->
                        <td class="text-nowrap">
                          <% if is_first_item %>
                            <span class="badge bg-secondary">#<%= purchase.id %></span>
                            <% if purchase.purchase_items.count > 1 %>
                              <small class="text-muted d-block">(<%= purchase.purchase_items.count %>商品)</small>
                            <% end %>
                          <% else %>
                            <span class="text-muted">└</span>
                          <% end %>
                        </td>
                        <!-- 販売店（同じ購入IDの場合は非表示） -->
                        <td class="fw-bold text-nowrap">
                          <%= is_first_item ? (purchase.user.name.present? ? purchase.user.name : purchase.user.email) : "" %>
                        </td>
                        <!-- 購入者名（同じ購入IDの場合は非表示） -->
                        <td class="text-nowrap">
                          <%= is_first_item ? (purchase.buyer&.name || "-") : "" %>
                        </td>
                        <!-- 商品名（常に表示） -->
                        <td class="text-nowrap">
                          <%= item.product.name %>
                        </td>
                        <!-- 基本単価（常に表示） -->
                        <td class="text-end text-nowrap">
                          <%= number_with_delimiter(item.product.base_price) %>
                        </td>
                        <!-- インセンティブ単価（常に表示） -->
                        <td class="text-end text-nowrap">
                          <%= number_with_delimiter(@user.incentive_unit_price_for_item(item)) %>
                        </td>
                        <!-- 数量（常に表示） -->
                        <td class="text-end text-nowrap">
                          <%= item.quantity %>
                        </td>
                        <!-- 合計（常に表示） -->
                        <td class="text-end text-primary fw-bold text-nowrap">
                          <%= number_with_delimiter(total) %>
                        </td>
                        <!-- インセンティブ（各アイテムごとに表示） -->
                        <td class="text-end text-success fw-bold text-nowrap">
                          <%= number_with_delimiter(item_bonus) %>
                        </td>
                        <!-- メール（同じ購入IDの場合は非表示） -->
                        <td class="text-nowrap">
                          <%= is_first_item ? (purchase.buyer&.email || "-") : "" %>
                        </td>
                        <!-- 電話番号（同じ購入IDの場合は非表示） -->
                        <td class="text-nowrap">
                          <%= is_first_item ? (purchase.buyer&.phone || "-") : "" %>
                        </td>
                        <!-- 住所（同じ購入IDの場合は非表示） -->
                        <td class="text-nowrap">
                          <%= is_first_item ? "-" : "" %>
                        </td>
                        <!-- 購入日（同じ購入IDの場合は非表示） -->
                        <td class="text-nowrap">
                          <%= is_first_item ? purchase.purchased_at&.strftime("%Y/%m/%d") : "" %>
                        </td>
                      </tr>
                    <% end %>
                  <% end %>

                  <!-- 合計行 -->
                  <tr class="table-primary fw-bold">
                    <td colspan="7" class="text-end text-nowrap">合計</td>
                    <td class="text-end text-primary text-nowrap"><%= number_with_delimiter(total_sum) %></td>
                    <td class="text-end text-success text-nowrap"><%= number_with_delimiter(@total_bonus) %></td>
                    <td colspan="4"></td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">販売履歴がありません</h5>
              <p class="text-muted">選択した月（<%= Date.strptime(@selected_month, "%Y-%m").strftime("%Y年%m月") %>）には販売履歴がありません。</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>