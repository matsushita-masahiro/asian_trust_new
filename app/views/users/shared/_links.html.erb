<div class="text-center space-y-2">
  <%- if controller_name != 'sessions' %>
    <div>
      <%= link_to "ログイン", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "アカウント登録", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "パスワードを忘れた方", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "確認メールを再送信", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "アカウントロック解除", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div>
        <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "px-4 py-2 border border-blue-600 text-blue-600 rounded-md hover:bg-blue-50 text-sm" %>
      </div>
    <% end %>
  <% end %>
</div>
