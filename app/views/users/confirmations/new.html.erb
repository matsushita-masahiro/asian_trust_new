<div class="container d-flex align-items-center justify-content-center mt-5" style="min-height: 90vh;">
  <div class="card shadow p-4" style="max-width: 420px; width: 100%;">
    <h4 class="mb-4 text-center text-primary">確認メール再送信</h4>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "確認メールを再送信", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
