<div class="container py-5 pt-5 mt-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary">📋 請求書履歴</h4>
        <div>
          <%= link_to "新規発行", issue_invoices_path, class: "btn btn-success me-2" %>
          <%= link_to "請求書管理に戻る", invoices_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow">
        <div class="card-header bg-light">
          <h5 class="mb-0">発行済み請求書一覧</h5>
        </div>
        <div class="card-body">
          <% if @invoices&.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>請求書番号</th>
                    <th>請求先</th>
                    <th>金額</th>
                    <th>発行日</th>
                    <th>支払期限</th>
                    <th>ステータス</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% @invoices.each do |invoice| %>
                    <tr>
                      <td><%= invoice.id.to_s.rjust(6, '0') %></td>
                      <td><%= invoice.invoice_recipient.name %></td>
                      <td class="text-end">¥<%= number_with_delimiter(invoice.total_amount) %></td>
                      <td><%= invoice.invoice_date&.strftime("%Y/%m/%d") || invoice.created_at.strftime("%Y/%m/%d") %></td>
                      <td><%= invoice.due_date&.strftime("%Y/%m/%d") %></td>
                      <td>
                        <% if invoice.confirmed? %>
                          <span class="badge bg-success">入金済み</span>
                        <% elsif invoice.sent? %>
                          <span class="badge bg-warning">入金待ち</span>
                        <% else %>
                          <span class="badge bg-secondary">下書き</span>
                        <% end %>
                      </td>
                      <td>
                        <% if invoice.draft? %>
                          <%= link_to "詳細", invoice_path(invoice), class: "btn btn-sm btn-outline-primary me-1" %>
                          <%= link_to "編集", edit_invoice_path(invoice), class: "btn btn-sm btn-outline-warning" %>
                        <% elsif invoice.sent? %>
                          <%= link_to "詳細", invoice_path(invoice), class: "btn btn-sm btn-outline-primary" %>
                        <% elsif invoice.confirmed? %>
                          <span class="badge bg-primary">領収書発行依頼待</span>
                        <% elsif invoice.receipt_requested? %>
                          <%= button_to "領収書発行する", send_receipt_invoice_path(invoice), 
                              method: :post, 
                              class: "btn btn-sm btn-success",
                              data: { confirm: "領収書を発行しますか？" } %>
                        <% elsif invoice.receipt_sent? %>
                          <span class="badge bg-primary">領収書発行完了</span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
              <p class="text-muted">まだ請求書が発行されていません</p>
              <%= link_to "最初の請求書を発行する", issue_invoices_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>