<ul class="list-group ms-3">
  <% referrals.each_with_index do |ref_user, i| %>
    <% if ref_user.referrals.any? %>
      <!-- 🔗 下位がいる: 行クリックでリンク -->
      <%= link_to admin_user_path(ref_user), class: "list-group-item list-group-item-action referral-link" do %>
        <span class="me-2 text-muted">#<%= i + 1 %>.</span>
        <strong class="text-success"><%= "#{ref_user.name}（#{ref_user.level_label}）" %></strong><br>
        📧 <%= ref_user.email %><br>
        🆔 <code><%= ref_user.lstep_user_id.presence || "未登録" %></code>
      <% end %>
    <% else %>
      <!-- ❌ 下位がいない: 通常表示 -->
      <li class="list-group-item">
        <span class="me-2 text-muted">#<%= i + 1 %>.</span>
        <strong><%= "#{ref_user.name}（#{ref_user.level_label}）" %></strong><br>
        📧 <%= ref_user.email %><br>
        🆔 <code><%= ref_user.lstep_user_id.presence || "未登録" %></code>
      </li>
    <% end %>
  <% end %>
</ul>
