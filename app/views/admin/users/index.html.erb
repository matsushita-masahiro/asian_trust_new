<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: 80px;">
        <h4 class="text-primary">代理店管理</h4>
        <%= link_to "ダッシュボード", admin_root_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">代理店一覧</h5>
        </div>
        <div class="card-body">
          <% if User.exists? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>代理店名</th>
                    <th>LステップID</th>
                    <th>メールアドレス</th>
                    <th>登録日</th>
                    <th>紹介者</th>
                    <th>直接紹介数</th>
                    <th>総売上</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% User.includes(:referrer, :referrals).order(:id).each do |user| %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.name.present? ? user.name : user.email %></td>
                      <td>
                        <% if user.lstep_user_id.present? %>
                          <span class="badge bg-info"><%= user.lstep_user_id %></span>
                        <% else %>
                          <span class="text-muted">未設定</span>
                        <% end %>
                      </td>
                      <td><%= user.email %></td>
                      <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
                      <td>
                        <% if user.referrer %>
                          <%= link_to (user.referrer.name.present? ? user.referrer.name : user.referrer.email), admin_user_path(user.referrer), class: "text-decoration-none" %>
                        <% else %>
                          <span class="text-muted">なし</span>
                        <% end %>
                      </td>
                      <td>
                        <span class="badge bg-primary"><%= user.referrals.count %></span>
                      </td>
                      <td>
                        <% total_sales = user.purchases.joins(:product).sum('products.base_price * purchases.quantity') %>
                        <span class="text-success">¥<%= number_with_delimiter(total_sales) %></span>
                      </td>
                      <td>
                        <%= link_to "詳細", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <p class="text-muted">まだ代理店が登録されていません</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>