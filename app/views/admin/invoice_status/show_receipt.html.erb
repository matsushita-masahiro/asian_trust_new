<div class="container-fluid py-4" style="margin-top: 100px;">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary">📋 領収書発行</h4>
        <%= link_to "請求書状況に戻る", admin_invoice_status_index_path(status: 'receipt_requested'), 
            class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <!-- 請求書情報 -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">📄 請求書情報</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th width="120">請求書番号:</th>
                  <td><strong>INV-<%= @invoice.id.to_s.rjust(6, '0') %></strong></td>
                </tr>
                <tr>
                  <th>請求者:</th>
                  <td><%= @invoice.user.name.presence || @invoice.user.email %></td>
                </tr>
                <tr>
                  <th>請求先:</th>
                  <td><%= @invoice.invoice_recipient.name %></td>
                </tr>
                <tr>
                  <th>対象月:</th>
                  <td><%= @invoice.target_month_display %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th width="120">請求金額:</th>
                  <td><strong class="text-success fs-4">¥<%= number_with_delimiter(@invoice.total_amount) %></strong></td>
                </tr>
                <tr>
                  <th>発行日:</th>
                  <td><%= @invoice.invoice_date&.strftime("%Y年%m月%d日") %></td>
                </tr>
                <tr>
                  <th>支払期限:</th>
                  <td><%= @invoice.due_date&.strftime("%Y年%m月%d日") %></td>
                </tr>
                <tr>
                  <th>ステータス:</th>
                  <td><span class="badge bg-info">領収書発行依頼済み</span></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- インセンティブ明細 -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">💰 インセンティブ明細</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>項目</th>
                    <th class="text-end">金額</th>
                    <th class="text-end">件数</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <strong>自分の販売によるインセンティブ</strong>
                      <br><small class="text-muted">直接販売による収益</small>
                    </td>
                    <td class="text-end">¥<%= number_with_delimiter(@incentive_details[:details][:own_sales]) %></td>
                    <td class="text-end">-</td>
                  </tr>
                  <tr>
                    <td>
                      <strong>子孫の販売による階層差額</strong>
                      <br><small class="text-muted">下位代理店の販売による収益</small>
                    </td>
                    <td class="text-end">¥<%= number_with_delimiter(@incentive_details[:details][:descendant_sales]) %></td>
                    <td class="text-end">-</td>
                  </tr>
                  <tr>
                    <td>
                      <strong>無資格者の販売によるインセンティブ</strong>
                      <br><small class="text-muted">直下の無資格者による販売収益</small>
                    </td>
                    <td class="text-end">¥<%= number_with_delimiter(@incentive_details[:details][:unqualified_sales]) %></td>
                    <td class="text-end">-</td>
                  </tr>
                </tbody>
                <tfoot>
                  <tr class="table-success">
                    <th>合計インセンティブ</th>
                    <th class="text-end">¥<%= number_with_delimiter(@incentive_details[:total]) %></th>
                    <th class="text-end"><%= @incentive_details[:details][:purchase_count] %>件</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <div class="col-md-4">
              <div class="card bg-light">
                <div class="card-body">
                  <h6 class="card-title">📊 概要</h6>
                  <p class="mb-1"><strong>対象月:</strong> <%= @incentive_details[:month] %></p>
                  <p class="mb-1"><strong>代理店:</strong> <%= @incentive_details[:user_name] %></p>
                  <p class="mb-1"><strong>現在のレベル:</strong> <%= @incentive_details[:current_level] %></p>
                  <p class="mb-0"><strong>総購入件数:</strong> <%= @incentive_details[:details][:purchase_count] %>件</p>
                </div>
              </div>
              
              <% if @incentive_details[:details][:level_changes].any? %>
                <div class="card bg-warning bg-opacity-10 mt-3">
                  <div class="card-body">
                    <h6 class="card-title">📈 期間中のレベル変更</h6>
                    <% @incentive_details[:details][:level_changes].each do |change| %>
                      <div class="small mb-2">
                        <strong><%= change[:date].strftime("%m/%d") %></strong><br>
                        <%= change[:from_level] %> → <%= change[:to_level] %>
                        <% if change[:reason].present? %>
                          <br><span class="text-muted"><%= change[:reason] %></span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 領収書プレビュー -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">🧾 領収書プレビュー</h5>
        </div>
        <div class="card-body">
          <div class="receipt-preview p-4 border rounded bg-white" style="max-width: 600px; margin: 0 auto;">
            <!-- 領収書ヘッダー -->
            <div class="text-center mb-4">
              <h2 class="fw-bold">領収書</h2>
              <p class="text-muted">Receipt</p>
            </div>

            <!-- 宛先 -->
            <div class="mb-4">
              <div class="row">
                <div class="col-8">
                  <p class="mb-1"><strong><%= @invoice.invoice_recipient.name %> 様</strong></p>
                </div>
                <div class="col-4 text-end">
                  <p class="mb-1">発行日: <%= Date.current.strftime("%Y年%m月%d日") %></p>
                </div>
              </div>
            </div>

            <!-- 金額 -->
            <div class="text-center mb-4 p-3 border rounded bg-light">
              <p class="mb-1">下記の通り領収いたしました</p>
              <h3 class="fw-bold text-primary">¥<%= number_with_delimiter(@invoice.total_amount) %>-</h3>
              <p class="text-muted">（<%= @invoice.target_month_display %>分インセンティブ）</p>
            </div>

            <!-- 発行者情報 -->
            <div class="row">
              <div class="col-6">
                <p class="mb-1"><strong>発行者</strong></p>
                <p class="mb-1">株式会社アジアビジネストラスト</p>
                <p class="mb-1">〒000-0000</p>
                <p class="mb-1">東京都○○区○○ 1-2-3</p>
                <p class="mb-1">TEL: 03-0000-0000</p>
              </div>
              <div class="col-6 text-end">
                <p class="mb-1">領収書番号</p>
                <p class="fw-bold">REC-<%= @invoice.id.to_s.rjust(6, '0') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 送信先確認 -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">📧 送信先確認</h5>
        </div>
        <div class="card-body">
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            以下のメールアドレスに領収書を送信します：
            <strong><%= @invoice.user.email %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 発行ボタン -->
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-end">
      <%= button_to send_receipt_admin_invoice_status_path(@invoice),
            method: :post,
            class: "btn btn-success btn-lg px-5",
            data: { turbo_confirm: "領収書を送信します。よろしいですか？" } do %>
       領収書を発行・送信
      <% end %>

      </div>
    </div>
  </div>
</div>

<style>
.receipt-preview {
  font-family: 'Noto Sans JP', sans-serif;
  line-height: 1.6;
}

.receipt-preview h2 {
  border-bottom: 2px solid #333;
  padding-bottom: 10px;
}

@media print {
  .receipt-preview {
    box-shadow: none !important;
    border: none !important;
  }
}
</style>