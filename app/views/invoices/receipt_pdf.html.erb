<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>領収書 REC-<%= @invoice.id.to_s.rjust(6, '0') %></title>
  <style>
    @page {
      size: A4;
      margin: 10mm;
    }

    body {
      font-family: 'Hiragino Kaku Gothic ProN', 'Meiryo', Arial, sans-serif;
      line-height: 1.4;
      color: #000;
      margin: 0;
      padding: 0;
      font-size: 10px;
    }

    .receipt-container {
      width: 100%;
      padding: 10px;
      box-sizing: border-box;
    }

    .header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 8px;
    }

    .left-info {
      flex: 1;
    }

    .header h1 {
      font-size: 20px;
      font-weight: bold;
      margin: 0 0 10px;
      color: #0066cc;
    }

    .invoice-base-info {
      font-size: 11px;
      line-height: 1.4;
    }

    .company-info {
      text-align: right;
      font-size: 11px;
      line-height: 1.4;
    }

    .company-name {
      font-weight: bold;
      margin-bottom: 2px;
    }

    .receipt-info {
      margin-bottom: 10px;
    }

    .receipt-info div {
      margin-bottom: 4px;
    }

    .amount-section {
      text-align: right;
      margin-bottom: 15px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 8px;
    }

    .amount-label {
      font-size: 13px;
      font-weight: bold;
    }

    .amount-value {
      font-size: 24px;
      font-weight: bold;
      color: #0066cc;
    }

    .details-section {
      margin-bottom: 10px;
    }

    .details-title {
      font-size: 12px;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .details-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 9px;
    }

    .details-table th,
    .details-table td {
      border: 1px solid #ccc;
      padding: 4px 3px;
      text-align: center;
    }

    .details-table th {
      background-color: #f5f5f5;
      font-weight: bold;
    }

    .details-table .customer-name,
    .details-table .product-name {
      text-align: left;
    }

    .details-table .amount,
    .details-table .bonus {
      text-align: right;
    }

    .details-table tfoot tr {
      background-color: #333 !important;
      color: white !important;
      font-weight: bold;
    }

    .details-table tfoot td {
      background-color: #333 !important;
      color: white !important;
    }
  </style>
</head>
<body>
  <div class="receipt-container">
    <!-- ヘッダー -->
    <div class="header">
      <div class="left-info">
        <h1>領収書</h1>
        <% if @invoice_base %>
          <div class="invoice-base-info">
            <% if @invoice_base.company_name.present? %>
              <div class="company-name"><%= @invoice_base.company_name %> 様</div>
            <% end %>
            <% if @invoice_base.postal_code.present? %>
              <div>〒<%= format_postal_code(@invoice_base.postal_code) %></div>
            <% end %>
            <% if @invoice_base.address.present? %>
              <div><%= @invoice_base.address %></div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="company-info">
        <div class="company-name"><%= @invoice_recipients.name.presence || '株式会社アジアビジネストラスト' %></div>
        <div class="company-name">〒<%= format_postal_code(@invoice_recipients.postal_code.presence || '1040061') %></div>
        <div class="company-name"><%= @invoice_recipients.address.presence || '東京都中央区銀座4-8-1 3階' %></div>
      </div>
    </div>

    <!-- 領収書情報 -->
    <div class="receipt-info">
      <div>領収書番号: REC-<%= @invoice.id.to_s.rjust(6, '0') %></div>
      <div>発行日: <%= Date.current.strftime("%Y年%m月%d日") %></div>
      <div>請求書番号: INV-<%= @invoice.id.to_s.rjust(6, '0') %></div>
      <div style="margin-top: 8px; font-weight: bold;">件名: <%= @invoice.target_month_display %>度インセンティブ</div>
    </div>

    <!-- 領収金額 -->
    <div class="amount-section">
      <div class="amount-label">領収金額</div>
      <div class="amount-value">¥<%= number_with_delimiter(@invoice.total_amount) %></div>
    </div>

    <!-- 明細 -->
    <div class="details-section">
      <div class="details-title">明細</div>
      <table class="details-table">
        <thead>
          <tr>
            <th style="width: 25%;">顧客名</th>
            <th style="width: 35%;">商品名</th>
            <th style="width: 15%;">単価</th>
            <th style="width: 10%;">数量</th>
            <th style="width: 15%;">インセンティブ</th>
          </tr>
        </thead>
        <tbody>
          <% if defined?(@bonus_details) && @bonus_details.present? %>
            <% @bonus_details.each do |detail| %>
              <tr>
                <td class="customer-name"><%= detail[:user_name] %></td>
                <td class="product-name"><%= detail[:product_name] %></td>
                <td class="amount">¥<%= number_with_delimiter(detail[:unit_bonus]) %></td>
                <td><%= detail[:quantity] %></td>
                <td class="bonus">¥<%= number_with_delimiter(detail[:total_bonus]) %></td>
              </tr>
            <% end %>
          <% else %>
            <tr><td colspan="5" style="text-align: center;">インセンティブ情報が見つかりません</td></tr>
          <% end %>
        </tbody>
        <% if defined?(@bonus_details) && @bonus_details.present? %>
          <tfoot>
            <tr style="background-color: #333; color: white; font-weight: bold;">
              <td colspan="4" style="text-align: center;">合計</td>
              <td class="bonus">¥<%= number_with_delimiter(@bonus_details.sum { |d| d[:total_bonus] }) %></td>
            </tr>
          </tfoot>
        <% end %>
      </table>
    </div>
  </div>
</body>
</html>
