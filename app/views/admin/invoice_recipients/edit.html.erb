<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">📋 請求先情報を編集</h2>
        <%= link_to "戻る", admin_invoice_recipient_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-light">
          <h5 class="mb-0">請求先情報編集</h5>
        </div>
        <div class="card-body">
          <%= form_with model: [:admin, @invoice_recipient], local: true, class: "needs-validation", novalidate: true do |f| %>
            <% if @invoice_recipient.errors.any? %>
              <div class="alert alert-danger">
                <h6>入力エラーがあります：</h6>
                <ul class="mb-0">
                  <% @invoice_recipient.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>



            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :name, "会社名", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", placeholder: "株式会社サンプル", required: true %>
                <div class="invalid-feedback">
                  会社名を入力してください。
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :department, "部署", class: "form-label" %>
                <%= f.text_field :department, class: "form-control", placeholder: "営業部" %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :email, "メールアドレス", class: "form-label" %>
                <%= f.email_field :email, class: "form-control", placeholder: "info@example.com" %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :tel, "電話番号", class: "form-label" %>
                <%= f.telephone_field :tel, class: "form-control", placeholder: "03-1234-5678" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :postal_code, "郵便番号", class: "form-label" %>
              <%= f.text_field :postal_code, class: "form-control", placeholder: "100-0001" %>
            </div>

            <div class="mb-3">
              <%= f.label :address, "住所", class: "form-label" %>
              <%= f.text_area :address, class: "form-control", rows: 2, placeholder: "東京都千代田区千代田1-1-1", required: true %>
              <div class="invalid-feedback">
                住所を入力してください。
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :notes, "備考", class: "form-label" %>
              <%= f.text_area :notes, class: "form-control", rows: 3, placeholder: "その他の情報や備考を入力してください" %>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "キャンセル", admin_invoice_recipient_path, class: "btn btn-outline-secondary me-md-2" %>
              <%= f.submit "請求先情報を更新", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>